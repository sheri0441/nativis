generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model BlogCategory {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  URL  String @unique
  name String
}

model productCategory {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  URL  String @unique
  name String
}

model product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  thumbnail   String
  images      String[]
  description String
  category    String
  guide       String
  ingredient  String
  suitable    String
  price       Json
  related     String[]
  created_at  DateTime @default(now())
}

model blog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  thumbnail  String
  likes      Int
  content    Json
  category   String
  main_image String
  createdAt  DateTime @default(now())
}

model user {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String  @unique
  image      String?
  fireBaseId String  @unique
  providerId String
  imageRef   String?
}

model cartItem {
  cartItemId        String  @id @default(auto()) @map("_id") @db.ObjectId
  id String
  quantity  Int
  userId    String
  size      String? 
}

model likes {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  blogId String
}

model comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  blogId    String
  content   String
  createdAt DateTime @default(now())
}
